pipeline {
    agent none
    stages {
        stage('Back-end') {
            agent {
                docker { image 'siva1995/nginx-image' }
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('Front-end') {
            agent {
                docker { image 'siva1995/nginx-img' }
            }
            steps {
                sh 'node --version'
            }
        }
    }
} 
